@model ServiceItem
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}
<section>
    <div>
        <header class="major">
            <h2>@Model.Title</h2>
        </header>
        <div>
            <img src="~/images/ServiceItems/@Model.TitleImagePath" width="400px" height="400px" class="img-left" />
        </div>
    </div>
    <div>
        @Html.Raw(Model.Text)
    </div>
</section>