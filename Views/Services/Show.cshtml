@model ServiceItem
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}
<section>
    <div>
        <header class="major">
            <h2>@Model.Title</h2>
        </header>
        <h3>
            @Model.SubTitle
        </h3>
        <div>
            <img class="img-left" src="~/images/ServiceItems/@Model.TitleImagePath"/>
        </div>
    </div>
    <div>
        @Html.Raw(Model.Text)
    </div>
</section>