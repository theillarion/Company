<div id="header-wrapper">
	<div class="container">

		<!-- Header -->
			<header id="header">
				<div class="inner">

					<!-- Logo -->
						<h1><a href="/" id="logo">@Config.CompanyName</a></h1>

					<!-- Nav -->
						<nav id="nav">
							<ul class="menu">
								<li><a asp-area="" asp-controller="Home" asp-action="Index">@Localizer["HomePage"]</a></li>
								@(await Component.InvokeAsync<HeaderViewComponent>())
